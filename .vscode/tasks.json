{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Exis",
            "command": "${workspaceFolder}/Source/Exis/build.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Source/Exis"
            }
        },
        {
            "type": "shell",
            "label": "Run Exis",
            "command": "${workspaceFolder}/Source/Exis/run.bat",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Source/Exis"
            }
        }
    ]
}